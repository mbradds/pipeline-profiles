<div id="safety-environment-section">
  <h2 id="safety-environment">{{text.safety.header}}</h2>
  <div class="btn-group btn-group-justified mrgn-tp-lg section-nav" id="safety-env-navigation">
    <div class="btn-group tab">
      <button type="button" class="btn btn-default tablinks active" onclick="openTab(event, 'condition-compliance')">
        {{text.safety.buttons.conditions}}
      </button>
    </div>
    <div class="btn-group tab">
      <button type="button" class="btn btn-default tablinks" onclick="openTab(event, 'pipeline-incidents')">
        {{text.safety.buttons.incidents}}
      </button>
    </div>
    <div class="btn-group tab">
      <button type="button" class="btn btn-default tablinks" onclick="openTab(event, 'operations-maintenance')">
        {{text.safety.buttons.oandm}}
      </button>
    </div>
    <div class="btn-group tab">
      <button type="button" class="btn btn-default tablinks" onclick="openTab(event, 'remediation')">
        {{text.safety.buttons.remediation}}
      </button>
    </div>
  </div>
  {{> conditions text=text}}
  {{> incidents text=text}}
  {{> oandm text=text}}
  {{> remediation text=text}}
</div>